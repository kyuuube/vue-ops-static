{
    "root": true,
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-console": 0,
        "comma-dangle": [
            "error",
            "only-multiline"
        ],
        "object-curly-spacing": 0,
        "space-before-function-paren": 0,
        "jsx-quotes": 0,
        "vue/require-v-for-key": 0,
        "vue/no-parsing-error": [2, {"x-invalid-end-tag":  false}],
        "vue/html-self-closing": "off"
    },
    "extends": ["eslint:recommended", "plugin:vue/essential"],
    "parserOptions": {
        "parser": "babel-eslint"
    }
}
